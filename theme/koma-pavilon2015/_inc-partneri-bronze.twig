{% setcontent sponzors = 'sponzori/first/6' where { stitky: 'bronze' } %}
{% for sponzor in sponzors %}
{% if loop.first %}
<div class="row">
        <div class="small-12 large-4 columns">
            <h5>{{__('The Pavilion is further supported by')}}</h5>
        </div>
</div>
<div class="row">
{% endif %}
    {% if sponzor.related %}
        <a href="{{ sponzor.related }}">
        {% else %}
        <a href="http://{{ sponzor.odkaz }}">
    {% endif %}
        <article class="small-6 medium-4 large-2 columns m-partner {% if loop.last %}end{% endif %}">
            <header>
                <div class="m-item--image">
                    {% if sponzor.image!="" %}
                        <img class="m-item--image" src="{{ thumbnail(sponzor.logo, 100,75, fit)}}" />
                    {% endif %}
                </div>
                <h1 class="m-item--hed"><a href="">{{ sponzor['nazev_' ~ app.locale] }}</a></h1>
            </header>
        </article>             
                
{% if loop.last %}
</div>
{% endif %}
{% endfor %}