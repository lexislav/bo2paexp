{% setcontent sponzors = 'sponzori/first/6' where { stitky: 'bronze' } %}
{% for sponzor in sponzors %}
{% if loop.first %}
<div class="row">
        <div class="small-12 large-4 columns">
            <h5>{{__('The Pavilion is further supported by')}}</h5>
        </div>
</div>
<div class="row">
{% endif %}
    <article class="small-6 medium-4 large-2 columns m-partner {% if loop.last %}end{% endif %}">
        {% if sponzor.related %}
            <a href="{{ sponzor.related }}">
        {% else %}
            <a href="http://{{ sponzor.odkaz }}" target="_blank">
        {% endif %}
            <header>
                <div class="m-item--image" {% if sponzor.image!="" %}style="background-image: url( {{ thumbnail(sponzor.logo, 100,75, fit) }});"{% endif %}></div>
                <h1 class="m-item--hed">{{ sponzor['nazev_' ~ app.locale] }}</h1>
            </header>
            </a>
    </article>
{% if loop.last %}
</div>
{% endif %}
{% endfor %}
