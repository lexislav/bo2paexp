<!-- blog -->
<div class="l-section m-section_grid">
    <article>
        <header class="clearfix mgr-full row">
            <div class="small-9 medium-10 large-6 columns">
                <h1 class="fnt-primary-headline">Zpravodaj pavilonu</h1>
            </div>
            <div class="small-3 medium-2 columns text-right">
                <a href="{{ paths.root }}{{ app.locale }}/blog" title="Pavilon"><i class="m-icon i-arrow x2"><span>more</span></i></a>
            </div>
        </header>

        <div class="row">
            {% setcontent zpravodaj = 'blog/latest/4' %}
            {% for record in zpravodaj %}
                {% include '_inc-blog-post-small.twig' %}
            {% else %}
                <h2>{{ __("No content found") }}.</h2>
                <p>
                    Unfortunately, no content could be found. Try another page, or go to the
                    <a href="{{ paths.root }}">homepage</a>. </p>
            {% endfor %}
        </div>
    </article>
</div>
