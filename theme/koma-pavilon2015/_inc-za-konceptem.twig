<!-- za konceptem-->
<div class="l-section m-section_text">
    <article>
        <header class="row mgr-full">
            <div class="small-12 large-5 columns">
            {% setcontent blok = 'bloky' where { id: '7' } %}
                <h1 class="fnt-primary-headline">{{ blok['title_' ~ app.locale] }}</h1>
            </div>
            <div class="small-12 large-7 columns">
                <h3 class="fnt-secondary-headline">{{ blok['body_' ~ app.locale] }}
                    {% if blok.related %}
                    {% set relatedmodals = blok.related() %}
                    {% for related in relatedmodals|order('id') %}
                    <i class="m-icon i-info mm-hover" data-reveal-id="{{related.slug}}"><span>moreinfo</span></i>
                    {%  endfor %}
                    {% endif %}
                </h3>
            </div>
        </header>
        <div class="row">
            <div class="small-12 medium-4 large-4 columns mgr-half">
                <a href="#" data-reveal-id="city-modul" ><img src="{{ paths.theme }}/assets/modul.png" alt="modul" /></a>
            </div>
            {% setcontent blok = 'bloky' where { id: '8' } %}
            <div class="small-12 medium-8 large-4 columns">
                <p>{{ blok['body_' ~ app.locale] }}</p>
            </div>
            {% setcontent blok = 'bloky' where { id: '9' } %}
            <div class="small-12 large-4 columns">
                <p>{{ blok['body_' ~ app.locale] }}</p>
            </div>
        </div>
    </article>
</div>