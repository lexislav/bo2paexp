<aside class="small-12 large-6 columns">

            {% if record.taxonomy.kategorie is defined %}
            <div class="row">
                <div class="mgr-full">
                    <h2 class="large-4 columns">{{ __('Kategorie') }}</h2>

                    <div class="large-8 columns">
                        {% for tag in record.taxonomy.kategorie %}
                        <a href="{{ paths.root }}{{ app.locale }}/kategorie/{{ tag }}">
                            {{ tag }}</a>{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endif %}

            {% if record.related!="" %}
            <div class="row">
                <div class="mgr-full">
                    <h2 class="large-4 columns">{{ __('Čtěte také:') }}</h2>
                    <div class="large-8 columns">
                        {% for odkaz in record.related %}
                        <article class="m-story">
                            <header>
                                <h1 class="m-item--hed">
                                    <a href="{{ odkaz.link }}" target="_parent" title="">{{ odkaz['title_' ~ app.locale] }}</a>
                                </h1>
                            </header>
                        </article>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endif %}

            {% if record.filelist!="" %}
            <div class="row">
                <div class="mgr-full">
                    <h2 class="large-4 columns">{{ __('Soubory ke stažení:') }}</h2>
                    <div class="large-8 columns">
                        {% for soubor in record.filelist %}
                        <article class="m-story">
                            <header>
                                <h1 class="m-item--hed">
                                    <a href="{{paths.files}}{{ soubor.filename }}" target="_parent" title="">{{ soubor.filename }}</a>
                                </h1>
                            </header>
                        </article>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endif %}



        </aside>