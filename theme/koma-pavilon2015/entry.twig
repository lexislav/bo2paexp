{% include '_header.twig' %}
<body class="l-page l-page_single">
<!-- {% include '_loader.twig' %} -->
{% include '_topbar.twig' with {'menuClasses': 'mm-white'} %}

<div id="top" class="row">

<div class="row">
    <div class="small-12 columns">
        <nav class="breadcrumbs">
            <a href="{{paths.root}}{{ app.locale }}/blog">ZRAVODAJ PAVILONU</a>
            <a class="current" href="#">KATEGORIE</a>
        </nav>
    </div>
</div>

<article class="m-story">

    <div class="row">
        <header class="small-12 large-7 columns">
            <h1 class="m-item--hed">{{ record['title_' ~ app.locale] }}</h1>

            <div class="m-item--meta">
                <div class="m-item--date-published">Datum vydání: {{ record.publishdate }}</div>
            </div>
        </header>
     
        <div class="small-6 large-4 columns">
            <nav class="m-light-nav mm-big text-right visible-for-large-up">
                <div class="m-light-nav--warp">
                {% set previous = record.previous('id') %}
                {% if previous %}
                    <a href="{{ previous.link }}" class="m-icon mm-prev" title="{{ previous.title }}"><i>previous</i></a>
                {% endif %}
                <a href="{{paths.root}}{{ app.locale }}/blog" class="m-icon mm-top"><i>top</i></a>
                {% set next = record.next('id') %}
                {% if next %}
                    <a href="{{ next.link }}" class="m-icon mm-next" title="{{ next.title }}"><i>next</i></a>
                {% endif %}            
                </div>
            </nav>
        </div>

    </div>

    <div class="row">
        {% if record.image!="" %}
        <div class="visible-for-medium-down">
            <div class="small-12 columns ">
                <div class="m-item--image">
                        <a href="{{ image(record.image) }}">
                        <img src="{{ thumbnail(record.image, 620, 465, crop) }}">
                        </a>
                </div>
            </div>
        </div>
        {% endif %}

        <div class="large-6 columns m-item--copy">
            {{ record['text_' ~ app.locale] }}
        </div>

        {% if record.image!="" %}
        <div class="visible-for-large-up">
            <div class="large-6  columns">
                <div class="m-item--image mgr-full">
                        <a href="{{ image(record.image) }}">
                        <img src="{{ thumbnail(record.image, 620, 465, crop) }}">
                        </a> 
                </div>
            </div>
        </div>
        {% endif %}

        <aside class="small-12 large-6 columns">

            <div class="row">
                <div class="mgr-full">
                    <h2 class="large-4 columns">Kategorie</h2>

                    <div class="large-8 columns">
                        <a href="#">Link 1</a>,
                        <a href="#">Link 2</a>,
                        <a href="#">Link 3</a>,
                        <a href="#">Link 4</a>,
                        <a href="#">Link 5</a>,
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="mgr-full">
                    <h2 class="large-4 columns">Čtěte také:</h2>

                    <div class="large-8 columns">
                        <article class="m-story">
                            <header>
                                <h1 class="m-item--hed">
                                    <a href="" target="_blank" title="">Šíleně krátký název článku</a></h1>
                            </header>
                        </article>

                        <article class="m-story">
                            <header>
                                <h1 class="m-item--hed">
                                    <a href="" target="_blank" title="">Šíleně přetažený a nejdelší název článku co by mohl případně překročit všechny meze slušnosti</a>
                                </h1>
                            </header>
                        </article>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="mgr-double">
                    <h2 class="large-4 columns">Čtěte také:</h2>

                    <div class="large-8 columns">
                        <article class="m-story">
                            <header>
                                <h1 class="m-item--hed">
                                    <a href="" target="_blank" title="">Šíleně krátký název článku</a></h1>
                            </header>
                        </article>

                        <article class="m-story">
                            <header>
                                <h1 class="m-item--hed">
                                    <a href="" target="_blank" title="">Šíleně přetažený a nejdelší název článku co by mohl případně překročit všechny meze slušnosti</a>
                                </h1>
                            </header>
                        </article>
                    </div>
                </div>
            </div>

        </aside>
    </div>
    <div class="row">
        <div class="large-12 columns mgr-full">
            {% include '_inc-entry-nav.twig' with {'navClasses': ''} %}
        </div>
    </div>

    <!-- fotogalerie -->
    {% if record.imagelist %}
    <div class="mgr-double">
        <div class="row">
            <h5 class="small-12 columns">Fotogalerie</h5>
            {% for imago in record.imagelist %}
                <div class="small-6 medium-4 large-3 xlarge-2 columns">
                    <a href="{{ imago.filename|image }}" title="{{ imago.title }}">
                      <img src="{{ imago.filename|thumbnail(280,210, crop) }}">
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="row">
        <div class="large-12 columns mgr-full">
            {% include '_inc-entry-nav.twig' with {'navClasses': ''} %}
        </div>
    </div>
    {% endif %}

    <!-- video -->
    {% if record.video!="" %}
    <div class="row">
        <div class="small-12 small-centered columns mgr-full">
            <h5>Videa</h5>

            <div class="flex-video widescreen vimeo">
                <iframe src="http://player.vimeo.com/video/60122989" width="400" height="225" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="large-12 columns mgr-full">
            {% include '_inc-entry-nav.twig' with {'navClasses': ''} %}
        </div>
    </div>
    {% endif %}

</article>
</div>

{% include '_partners.twig' %}
{% include '_inc-footer.twig' %}

<script src="{{ paths.theme }}js/app.js"></script>

{% include '_inc-analytics.twig' %}
</body>
{% include '_footer.twig' %}
